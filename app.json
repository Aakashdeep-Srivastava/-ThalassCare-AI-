{
  "expo": {
    "name": "Thalassemia AI Care",
    "slug": "thalassemia-ai-care", 
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "thalassemia-care",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "manifest": {
        "name": "Thalassemia AI Care",
        "short_name": "Thal Care",
        "description": "AI-powered thalassemia management and monitoring",
        "background_color": "#ffffff",
        "theme_color": "#2563EB",
        "display": "standalone",
        "start_url": "/",
        "orientation": "portrait"
      }
    },
    "plugins": ["expo-router", "expo-font", "expo-web-browser"],
    "experiments": {
      "typedRoutes": true
    }
  }
}